<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frm_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_ground_dialog">

    <RelativeLayout
        android:id="@+id/rlt_code_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingLeft="92px"
            android:paddingRight="92px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24px"
                        android:background="@drawable/copy_code_frame_selector"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="36px"
                            android:scaleType="fitCenter"
                            android:src="@drawable/header_title_group_manual" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="49px"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/btn_blue_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="20px"
                                android:layout_marginRight="20px"
                                android:scaleType="fitXY"
                                android:src="@drawable/blue_coin" />

                            <ImageView
                                android:id="@+id/btn_red_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="20px"
                                android:layout_marginRight="20px"
                                android:scaleType="fitXY"
                                android:src="@drawable/red_coin" />

                            <ImageView
                                android:id="@+id/btn_silver_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="20px"
                                android:layout_marginRight="20px"
                                android:scaleType="fitXY"
                                android:src="@drawable/silver_coin" />

                            <ImageView
                                android:id="@+id/btn_gold_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="20px"
                                android:layout_marginRight="20px"
                                android:scaleType="fitXY"
                                android:src="@drawable/gold_coin" />

                            <ImageView
                                android:id="@+id/btn_black_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="20px"
                                android:layout_marginRight="20px"
                                android:scaleType="fitXY"
                                android:src="@drawable/black_coin" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:layout_marginLeft="45px"
                            android:layout_marginRight="46px"
                            android:background="@color/common_line_color" />

                        <ImageView
                            android:id="@+id/content_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="20px"
                            android:layout_marginRight="20px"
                            android:layout_marginTop="20px"
                            android:scaleType="fitXY"
                            android:src="@drawable/blue_content" />


                        <ImageView
                            android:id="@+id/btn_close_copy_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="60px"
                            android:layout_marginTop="100px"
                            android:scaleType="fitXY"
                            android:src="@drawable/btn_close_copy_code" />
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>
