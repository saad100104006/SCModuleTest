<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@color/main_dark"
         android:orientation="horizontal">

          <ImageView
              android:layout_width="111px"
              android:layout_height="70px"
              android:layout_margin="20px"
              android:scaleType="fitXY"
              android:src="@drawable/get_count_label_one" />

          <LinearLayout
              android:layout_width="47px"
              android:layout_height="70px"
              android:layout_marginBottom="20px"
              android:layout_marginTop="20px"
              android:background="@drawable/tv_background_white"
              android:orientation="vertical">

               <TextView
                   android:id="@+id/tv_old"
                   android:layout_width="47px"
                   android:layout_height="70px"
                   android:gravity="center"
                   android:tag="60"
                   android:text="4"
                   android:textColor="@color/main_dark"
                   android:textSize="60px"
                   android:textStyle="bold" />

               <TextView
                   android:id="@+id/tv_new"
                   android:layout_width="47px"
                   android:layout_height="70px"
                   android:layout_marginBottom="0px"
                   android:gravity="center"
                   android:tag="60"
                   android:text="3"
                   android:textColor="@color/main_dark"
                   android:textSize="60px"
                   android:textStyle="bold" />
          </LinearLayout>


          <ImageView
              android:layout_width="83px"
              android:layout_height="45px"
              android:layout_marginLeft="20px"
              android:layout_marginRight="20px"
              android:layout_marginTop="45px"
              android:src="@drawable/get_count_label_two" />

          <ImageView
              android:id="@+id/image_one"
              android:layout_width="70px"
              android:layout_height="70px"
              android:layout_marginLeft="20px"
              android:layout_marginRight="20px"
              android:layout_marginTop="20px"
              android:scaleType="fitXY"
              android:src="@drawable/get_count_coin_image_off" />

          <ImageView
              android:id="@+id/image_two"
              android:layout_width="70px"
              android:layout_height="70px"
              android:layout_marginRight="20px"
              android:layout_marginTop="20px"
              android:scaleType="fitXY"
              android:src="@drawable/get_count_coin_image_off" />

          <ImageView
              android:id="@+id/image_three"
              android:layout_width="70px"
              android:layout_height="70px"
              android:layout_marginRight="20px"
              android:layout_marginTop="20px"
              android:scaleType="fitXY"
              android:src="@drawable/get_count_coin_image_off" />

          <ImageView
              android:id="@+id/image_four"
              android:layout_width="70px"
              android:layout_height="70px"
              android:layout_marginRight="20px"
              android:layout_marginTop="20px"
              android:scaleType="fitXY"
              android:src="@drawable/get_count_coin_image_off" />

          <ImageView
              android:id="@+id/image_five"
              android:layout_width="70px"
              android:layout_height="70px"
              android:layout_marginRight="20px"
              android:layout_marginTop="20px"
              android:scaleType="fitXY"
              android:src="@drawable/get_count_coin_image_off" />

          <TextView
              android:id="@+id/tv_last_label"
              android:layout_width="183px"
              android:layout_height="84px"
              android:layout_marginBottom="20px"
              android:layout_marginTop="10px"
              android:background="@drawable/tv_yellow_backgroung"
              android:gravity="center"
              android:padding="4px"
              android:tag="25"
              android:text="ポイントGET\nまであと4日!"
              android:textColor="@color/main_dark"
              android:textSize="25px" />
     </LinearLayout>
</LinearLayout>
