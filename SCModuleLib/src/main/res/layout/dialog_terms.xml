<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frm_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:paddingLeft="100px"
        android:paddingRight="100px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="54px"
                android:background="@drawable/copy_code_frame_selector"
                android:orientation="vertical"
                android:paddingBottom="30px"
                android:paddingTop="60px">

                <ImageView
                    android:layout_width="181px"
                    android:layout_height="61px"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="36px"
                    android:scaleType="fitCenter"
                    android:src="@drawable/terms_header" />

                <ScrollView
                    android:layout_width="700px"
                    android:layout_height="700px"
                    android:layout_marginTop="31px"
                    android:layout_gravity="center">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="700px"
                        android:orientation="vertical"
                        >
                        <WebView
                            android:id="@+id/wb_terms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                           />

                    </LinearLayout>

                </ScrollView>

                <Button
                    android:id="@+id/btn_goto_web"
                    android:layout_width="481px"
                    android:layout_height="121px"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10px"
                    android:layout_marginTop="75px"
                    android:background="@drawable/selector_btn_term"
                    android:tag="39"
                    />

                <ImageView
                    android:id="@+id/btn_close_copy_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="25px"
                    android:layout_marginTop="45px"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_close_copy_code"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</FrameLayout>
