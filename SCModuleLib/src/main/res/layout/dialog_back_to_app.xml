<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frm_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingLeft="30px"
        android:paddingRight="30px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="54px"
                android:background="@drawable/black_rounded_corner"
                android:orientation="vertical"
                android:paddingBottom="30px"
                android:paddingTop="60px">
                <LinearLayout
                    android:layout_width="1000px"
                    android:gravity="center"
                    android:layout_marginBottom="100px"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="600px"
                        android:layout_height="400px"
                        android:src="@drawable/header_dialog_back"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_cancel"
                        android:layout_width="400px"
                        android:layout_height="120px"
                        android:layout_marginRight="20px"
                        android:background="@drawable/btn_selector_rounded_gray"
                        android:tag="50"
                        android:text="キャンセル"
                        android:textColor="@color/main_dark"
                        android:textSize="50px"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_ok"
                        android:layout_width="400px"
                        android:layout_height="120px"
                        android:layout_marginLeft="20px"
                        android:background="@drawable/btn_selector_rounded"
                        android:tag="60"
                        android:text="OK"
                        android:textColor="@color/main_dark"
                        android:textSize="60px"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/btn_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="25px"
                    android:layout_marginTop="180px"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_close_copy_code" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
