<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.co.scmodule.ECDetailProductActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="134px"
        android:background="@color/ec_btn_go_to_shop_page_off">

        <ImageView
            android:id="@+id/ec_btn_back"
            android:layout_width="233px"
            android:layout_height="match_parent"
            android:paddingLeft="49px"
            android:paddingRight="53px"
            android:src="@drawable/ec_btn_back_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:tag="49"
            android:text="@string/ec_detail_product_header"
            android:textColor="@android:color/white"
            android:textSize="49px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ec_tv_user_point"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="49px"
            android:gravity="center_vertical"
            android:tag="51"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="51px"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_layout"
        android:layout_marginTop="134px"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ec_product_detail_ll_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="750px">


                <ImageView
                    android:id="@+id/ec_img_detail_product_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />

                <Button
                    android:id="@+id/ec_btn_detail_product_like"
                    android:layout_width="150px"
                    android:layout_height="150px"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="30px"
                    android:layout_marginRight="30px"
                    android:background="@drawable/ec_btn_like_selector"
                    android:clickable="true"
                    android:gravity="top"
                    android:lineSpacingExtra="9px"
                    android:paddingLeft="88px"
                    android:paddingTop="20px"
                    android:tag="20"
                    android:textColor="@android:color/white"
                    android:textSize="23px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_discount_badge"
                    android:layout_width="88px"
                    android:layout_height="122px"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="20px"
                    android:background="@drawable/ec_discount_badge"
                    android:gravity="center"
                    android:paddingBottom="10px"
                    android:tag="25"
                    android:text=""
                    android:textColor="@color/tw__solid_white"
                    android:textSize="25px"
                    android:textStyle="bold"
                    android:visibility="gone"></TextView>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ec_tv_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="45px"
                    android:includeFontPadding="false"
                    android:tag="43"
                    android:text=""
                    android:textColor="@color/ec_btn_go_to_shop_page_off"
                    android:textSize="43px" />

                <Button
                    android:id="@+id/ec_btn_go_to_shop"
                    android:layout_width="314px"
                    android:layout_height="73px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="50px"
                    android:background="@drawable/ec_btn_go_to_shop" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ec_tv_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="43px"
                    android:layout_marginTop="5px"
                    android:includeFontPadding="false"
                    android:tag="43"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="48px" />

                <Button
                    android:id="@+id/ec_btn_official_url"
                    android:layout_width="316px"
                    android:layout_height="74px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="27px"
                    android:layout_marginRight="50px"
                    android:background="@drawable/ec_btn_go_to_detail_page_selector"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/ec_tv_description_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="45px"
                android:layout_marginRight="45px"
                android:layout_marginTop="32px"
                android:tag="35"
                android:text=""
                android:textSize="35px" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:gravity="center_horizontal"
        android:paddingBottom="40px"
        android:paddingTop="40px">

        <TextView
            android:id="@+id/ec_tv_point"
            android:layout_width="422px"
            android:layout_height="153px"
            android:background="@drawable/ec_point_background_selector"
            android:gravity="center"
            android:tag="60"
            android:text="00000 pt"
            android:textColor="@color/ec_btn_go_to_shop_page_off"
            android:textSize="60px"
            android:textStyle="bold" />

        <Button
            android:id="@+id/ec_btn_trade"
            android:layout_width="544px"
            android:layout_height="154px"
            android:layout_gravity="center"
            android:layout_marginLeft="27px"
            android:background="@drawable/common_btn_blue_rounded"
            android:gravity="center"
            android:tag="54"
            android:text="@string/ec_detail_product_trade"
            android:textColor="@android:color/white"
            android:textSize="54px"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>
