<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_dark"
    tools:context="jp.co.scmodule.SCAddGroup">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="132px"
        android:background="@android:color/black">

        <!--real image size is 40x50px-->
        <ImageView
            android:id="@+id/img_left_header"
            android:layout_width="67px"
            android:layout_height="80px"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="25px"
            android:layout_marginTop="22px"
            android:scaleType="fitCenter"
            android:padding="10px"
            android:src="@drawable/yellow_left_arrow"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingLeft="105px"
        android:paddingRight="105px"
        android:orientation="vertical">

        <ImageView
            android:layout_width="657px"
            android:layout_height="45px"
            android:layout_gravity="center"
            android:layout_marginRight="21px"
            android:src="@drawable/add_group_header" />

        <Button
            android:id="@+id/edit_info_one_btn_group"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_marginTop="45px"
            android:background="@drawable/selector_btn_type"
            android:gravity="center"
            android:tag="39"
            android:text="@string/add_group_text"
            android:textColor="@android:color/white"
            android:textSize="39px"
            android:textStyle="bold" />

        <Button
            android:id="@+id/edit_info_one_btn_next"
            android:layout_width="482px"
            android:layout_height="121px"
            android:layout_gravity="center"
            android:layout_marginTop="45px"
            android:background="@drawable/selector_btn_next"
            android:tag="39"
            android:text="@string/next"
            android:textSize="39px" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/copyrights_text"
        android:orientation="vertical"></ImageView>
</RelativeLayout>
