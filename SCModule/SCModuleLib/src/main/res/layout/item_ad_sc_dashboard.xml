<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_dark"
        android:weightSum="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="260px"
            android:layout_marginRight="3px"
            android:layout_weight=".5"
            android:scaleType="fitXY">

            <ImageView
                android:id="@+id/ad_image_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/ad_text_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:tag="30"
                android:textColor="@color/tw__solid_white"
                android:text=""
                android:singleLine="true"
                android:gravity="left"
                android:paddingLeft="10px"
                android:layout_marginTop="10px"
                android:background="@color/common_black_50"
                android:textSize="30px" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="260px"
            android:layout_marginRight="3px"
            android:layout_weight=".5"
            android:scaleType="fitXY">

            <ImageView
                android:id="@+id/ad_image_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/ad_text_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:tag="30"
                android:textColor="@color/tw__solid_white"
                android:text=""
                android:gravity="left"
                android:layout_marginTop="10px"
                android:singleLine="true"
                android:paddingLeft="10px"
                android:background="@color/common_black_50"
                android:textSize="30px" />
        </FrameLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/notification_footer_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible">

        <TextView
            android:id="@+id/notification_footer_tv_show_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="41px"
            android:background="@android:color/transparent"
            android:paddingBottom="15px"
            android:tag="35"
            android:text="@string/view_all"
            android:textColor="@color/common_sc_main_color"
            android:textSize="35px"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/notification_footer_tv_toretan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/notification_footer_tv_show_all"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="39px"
            android:layout_marginTop="8px"
            android:background="@android:color/transparent"
            android:tag="35"
            android:text="@string/toretan_guest_footer"
            android:textColor="@color/common_sc_main_color"
            android:textSize="35px"
            android:textStyle="bold"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@id/notification_footer_tv_toretan"
            android:background="@color/common_line_color"
            android:visibility="visible" />

    </RelativeLayout>


</LinearLayout>