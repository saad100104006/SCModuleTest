<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_dark">

    <RelativeLayout
        android:id="@+id/item_choosen_btn_main"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:background="@drawable/common_btn_yellow_selector">


        <TextView
            android:id="@+id/item_choosen_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60px"
            android:tag="40"
            android:textColor="@android:color/white"
            android:textSize="40px" />

        <ImageView
            android:id="@+id/item_choosen_img_narrow"
            android:layout_width="21px"
            android:layout_height="37px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="60px"
            android:src="@drawable/img_white_narrow_right" />

    </RelativeLayout>

</RelativeLayout>
