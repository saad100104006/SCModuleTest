<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/item_v_blank_header"
        android:layout_width="match_parent"
        android:layout_height="30px"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="495px"
        android:layout_height="600px"
        android:background="@android:color/white">


        <ImageView
            android:id="@+id/item_ec_img"
            android:layout_width="match_parent"
            android:layout_height="360px"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/item_ec_img_rank"
            android:layout_width="93px"
            android:layout_height="93px"
            android:layout_marginLeft="25px"
            android:layout_marginTop="25px"
            android:scaleType="fitXY" />

        <Button
            android:id="@+id/item_ec_btn_like"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_alignBottom="@+id/item_ec_img"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="15px"
            android:layout_marginRight="14px"
            android:background="@drawable/ec_btn_like_selector"
            android:gravity="top"
            android:lineSpacingExtra="6px"
            android:paddingLeft="59px"
            android:paddingTop="15px"
            android:tag="13"
            android:textColor="@android:color/white"
            android:textSize="15px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_ec_tv_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36px"
            android:layout_marginRight="35px"
            android:layout_marginTop="377px"
            android:singleLine="true"
            android:tag="29"
            android:text="addidas Japan"
            android:textColor="@color/common_ec_blue_txt"
            android:textSize="29px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_ec_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_ec_tv_owner"
            android:layout_marginLeft="32px"
            android:layout_marginRight="35px"
            android:layout_marginTop="6px"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:tag="36"
            android:text="stansmith"
            android:textColor="@android:color/black"
            android:textSize="36px" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_ec_tv_name"
            android:layout_marginTop="18px"
            android:orientation="horizontal"
            android:paddingLeft="30px"
            android:paddingRight="30px">

            <jp.co.scmodule.widgets.SCSingleLineTextView
                android:id="@+id/item_ec_tv_point"
                android:layout_width="240px"
                android:layout_height="91px"
                android:background="@drawable/ec_point_background_selector"
                android:gravity="center"
                android:paddingLeft="22px"
                android:paddingRight="28px"
                android:tag="44"
                android:text="00000 pt"
                android:textColor="@color/common_ec_blue_txt"
                android:textSize="44px"
                android:textStyle="bold" />

            <Button
                android:id="@+id/item_ec_btn_exchange_point"
                android:layout_width="180px"
                android:layout_height="91px"
                android:layout_alignParentRight="true"
                android:background="@drawable/common_btn_blue_rounded"
                android:tag="30"
                android:text="@string/ec_detail_product_trade"
                android:textColor="@android:color/white"
                android:textSize="30px"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_discount_badge"
            android:layout_width="88px"
            android:layout_height="122px"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20px"
            android:text=""
            android:visibility="gone"
            android:textSize="25px"
            android:paddingBottom="10px"
            android:tag="25"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/tw__solid_white"
            android:background="@drawable/ec_discount_badge"></TextView>

    </RelativeLayout>

    <View
        android:id="@+id/item_v_blank_footer"
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:visibility="gone" />

</LinearLayout>
