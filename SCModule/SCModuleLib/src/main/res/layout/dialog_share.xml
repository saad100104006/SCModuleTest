<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frm_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_ground_dialog">

    <RelativeLayout
        android:id="@+id/rlt_code_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:paddingLeft="92px"
            android:paddingRight="92px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/copy_code_frame_selector"
                    android:orientation="vertical">
                    <TextView

                        android:id="@+id/tv_mail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="20px"
                        android:layout_marginTop="20px"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:tag="50"
                        android:text="メールで招待する"
                        android:textColor="#017AFF"
                        android:textSize="50px" />


                    <TextView

                        android:id="@+id/tv_line"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="20px"
                        android:layout_marginTop="20px"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:tag="50"
                        android:text="LINE"
                        android:textColor="#017AFF"
                        android:textSize="50px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24px"
                    android:background="@drawable/copy_code_frame_selector"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/btn_close_copy_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="20px"
                        android:layout_marginTop="20px"
                        android:scaleType="fitXY"
                        android:text="閉じる"
                        android:textSize="50px"
                        android:textColor="#017AFF" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>
