<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frm_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="#80000000">


    <RelativeLayout
        android:id="@+id/rlt_code_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingLeft="42px"
            android:paddingRight="42px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24px"
                    android:background="@drawable/dialog_background_white_glowing"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="76px"
                        android:scaleType="fitCenter"
                        android:src="@drawable/dialog_header" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="44px"
                        android:background="@drawable/black_rounder_corner_bc"
                        android:gravity="center"
                        android:layout_marginLeft="50px"
                        android:layout_marginRight="50px"
                        android:orientation="vertical">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="60px"
                            android:layout_marginRight="35px"
                            android:weightSum="4"

                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="111px"
                                android:layout_height="100px"
                                android:layout_marginRight="20px"
                                android:layout_marginTop="20px"
                                android:layout_marginBottom="20px"
                                android:layout_weight="1"
                                android:src="@drawable/get_count_label_one" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="90px"
                                android:layout_marginBottom="10px"
                                android:layout_marginTop="20px"
                                android:background="@drawable/tv_background_white"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_old"
                                    android:layout_width="50px"
                                    android:layout_height="100px"
                                    android:gravity="center"
                                    android:tag="60"
                                    android:text="4"
                                    android:layout_marginLeft="5px"
                                    android:textColor="@color/main_dark"
                                    android:textSize="60px"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_new"
                                    android:layout_width="50px"
                                    android:layout_height="70px"
                                    android:layout_marginBottom="0px"
                                    android:gravity="center"
                                    android:layout_marginLeft="5px"
                                    android:tag="60"
                                    android:text="3"
                                    android:textColor="@color/main_dark"
                                    android:textSize="60px"
                                    android:textStyle="bold" />
                            </LinearLayout>


                            <ImageView
                                android:layout_weight="1"
                                android:layout_width="83px"
                                android:layout_height="100px"
                                android:layout_marginLeft="20px"
                                android:layout_marginRight="20px"
                                android:layout_marginTop="25px"
                                android:src="@drawable/get_count_label_two" />


                            <TextView
                                android:layout_weight="1"
                                android:id="@+id/tv_last_label"
                                android:layout_width="183px"
                                android:layout_height="110px"
                                android:layout_marginBottom="20px"
                                android:layout_marginTop="10px"
                                android:background="@drawable/tv_yellow_backgroung"
                                android:gravity="center"
                                android:padding="4px"
                                android:tag="25"
                                android:text="ポイントGET\nまであと4日!"
                                android:textColor="@color/main_dark"
                                android:textSize="30px" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="5"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/count_one"
                                android:layout_width="70px"
                                android:layout_height="80px"
                                android:layout_marginLeft="40px"
                                android:layout_marginRight="20px"
                                android:layout_marginTop="20px"
                                android:layout_weight="1"
                                android:src="@drawable/get_count_coin_image_off" />

                            <ImageView
                                android:id="@+id/count_two"
                                android:layout_width="70px"
                                android:layout_height="80px"
                                android:layout_marginRight="20px"
                                android:layout_marginTop="20px"
                                android:layout_weight="1"
                                android:src="@drawable/get_count_coin_image_off" />

                            <ImageView
                                android:id="@+id/count_three"
                                android:layout_width="70px"
                                android:layout_height="80px"
                                android:layout_marginRight="20px"
                                android:layout_marginTop="20px"
                                android:layout_weight="1"
                                android:src="@drawable/get_count_coin_image_off" />

                            <ImageView
                                android:id="@+id/count_four"
                                android:layout_width="70px"
                                android:layout_height="80px"
                                android:layout_marginRight="20px"
                                android:layout_marginTop="20px"
                                android:layout_weight="1"
                                android:src="@drawable/get_count_coin_image_off" />

                            <ImageView
                                android:id="@+id/count_five"
                                android:layout_width="70px"
                                android:layout_height="80px"
                                android:layout_marginTop="20px"
                                android:layout_weight="1"
                                android:layout_marginRight="40px"
                                android:src="@drawable/get_count_coin_image_off" />
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/btn_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="65px"
                        android:layout_marginTop="72px"
                        android:scaleType="fitXY"
                        android:src="@drawable/btn_close_copy_code" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>