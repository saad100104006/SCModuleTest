<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:textColor="@android:color/white">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="2px" android:color="@android:color/black" />
        </shape>
    </item>
    <item android:state_pressed="true" android:textColor="@android:color/darker_gray">
        <shape android:shape="rectangle">
            <stroke android:width="2px" android:color="@android:color/black" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</selector>